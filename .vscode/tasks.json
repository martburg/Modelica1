{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/EHsc",
				"/nologo",
				"${file}",
				"/LD",                         // build as DLL
				"/Fe:..\\Resources\\Library\\spring_solver.dll",
				"/Fo:spring_solver.obj", // OBJ output path
				"/link",
				"/IMPLIB:..\\spring_solver.lib" // LIB output path
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}